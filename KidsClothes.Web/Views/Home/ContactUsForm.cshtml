@model KidsClothes.Core.Models.ContactForm


    <div class="col-lg-6">
        <h2 class="title mb-1">سوالی دارید؟</h2><!-- End .title mb-2 -->
        <p class="mb-2">با استفاده از فرم زیر می توانید با ما ارتباط برقرار کنید</p>

        @*<form action="#" class="contact-form mb-3">*@
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "commentform", @class = "contact-form mb-3" }))
        {
            <div class="row">
                <div class="col-sm-6">
                    <label for="cname" class="sr-only">نام</label>
                    <input type="text" class="form-control" id="cname" name="Name"
                           placeholder="نام خود را وارد کنید *" required>
                </div><!-- End .col-sm-6 -->
                <div class="col-sm-6">
                    <label for="cphone" class="sr-only">شماره موبایل</label>
                    <input type="tel" class="form-control" id="cphone" name="Phone"
                           placeholder="شماره موبایل خود را وارد کنید">
                </div><!-- End .col-sm-6 -->
            </div><!-- End .row -->

            <div class="row">
                <div class="col-sm-12">
                    <label for="cemail" class="sr-only">ایمیل</label>
                    <input type="email" class="form-control" id="cemail" name="Email"
                           placeholder="ایمیل خود را وارد کنید *" required>
                </div><!-- End .col-sm-6 -->
            </div><!-- End .row -->
            <div class="row">
                <div class="col-sm-12">
                    <label for="cmessage" class="sr-only">پیام</label>
                    <textarea class="form-control" cols="30" rows="4" id="cmessage" required name="Message"
                              placeholder="متن پیام شما *"></textarea>
                </div><!-- End .col-sm-6 -->
            </div><!-- End .row -->

            <button type="submit" class="btn btn-outline-primary-2 btn-minwidth-sm float-right">
                <span>تایید و ارسال</span>
                <i class="icon-long-arrow-left"></i>
            </button>
        }
        @*</form>*@<!-- End .contact-form -->
