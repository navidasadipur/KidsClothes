        @Html.Action("PartnerCompaniesSection", "Home", new { take = 8 } )

        

        <div class="container-fluid">
            <div class="cta cta-separator">
                <div class="row">
                    @Html.Action("HomeSocialsSection", "Home")

                    @Html.Action("HomeCustomerCommentsSection", "Home")

                </div><!-- End .row -->
            </div><!-- End .cta -->
        </div><!-- End .container-fluid -->

        <div class="mb-7"></div><!-- End .mb-7 -->

        @Html.Action("LatestArticlesSection", "Home", new { take = 4 })




    </main><!-- End .main -->
