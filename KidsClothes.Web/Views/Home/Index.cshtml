@model KidsClothes.Core.Models.StaticContentDetail

@{
    ViewBag.Title = "خانه";
}

@Html.Action("HeaderSection", "Home")

    <main class="main">

        @Html.Action("HomeTopSliderSection", "Home")

        @Html.Action("OffersSection", "Home")

        <div class="video-banner video-banner-bg video-fullheight bg-image text-center"
             style="background-image: url(/Files/StaticContentImages/Image/@ViewBag.HomeMiddleBanner.Image)">
